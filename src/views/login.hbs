<div id="login-page"></div>

<img id="background-top" src="/images/top.svg" alt="">
<img id="background-bottom" src="/images/bottom.svg" alt="">
<div class="container-login flex-center">
    <div class="wrapper-login flex-center">
        <div class="left flex-center">
            <img src="/images/login.png" class="img-responsive"alt="">
        </div>
        <div class="right">
            <div class="login-form">
                <form action="" class="flex-center-column">
                    <h1>Sign In</h1>
                    <div class="form-group">
                        <input type="text" placeholder=" " id="username" autocomplete="off">
                        <label for="username">Username</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder=" " id="password" autocomplete="off">
                        <label for="password">Password</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <button id="btn-login" class="btn btn-secondary btn-login">Get Started</button>
                    </div>
                    <div class="register">
                        Don't have an account?
                        <a href="/register">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>