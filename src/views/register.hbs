<div id="register-page"></div>

    <img id="background-top" src="/images/top.svg" alt="">
    <img id="background-bottom" src="/images/bottom.svg" alt="">
<div class="container-login flex-center">
    <div class="wrapper-login flex-center">
        <div class="left flex-center">
            <img src="/images/login.png" class="img-responsive"alt="">
        </div>
        <div class="right">
            <div class="login-form">
                <form action="" class="flex-center-column">
                    <h1>Sign Up</h1>
                    <div class="form-group">
                        <input type="text" placeholder=" " id="username" autocomplete="off">
                        <label for="username">Username</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder=" " id="password" autocomplete="off">
                        <label for="password">Password</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder=" " id="repeated-password" autocomplete="off">
                        <label for="repeated-password">Repeat Password</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder=" " id="name" autocomplete="off">
                        <label for="name">Name</label>
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="form-group">
                        <button id="btn-register" class="btn btn-secondary btn-login">Register</button>
                    </div>
                    
                    <div class="register">
                        Have an account?
                        <a href="/login">Login now
                        <i class="fas fa-hand-point-left"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
